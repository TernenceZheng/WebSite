@model WebSite.Models.ViewModels.Products
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!--/row-->
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>
                    <i class="glyphicon glyphicon-edit"></i>Form Elements</h2>
                <div class="box-icon">
                    <a href="#" class="btn btn-setting btn-round btn-default"><i class="glyphicon glyphicon-cog">
                    </i></a><a href="#" class="btn btn-minimize btn-round btn-default"><i class="glyphicon glyphicon-chevron-up">
                    </i></a><a href="#" class="btn btn-close btn-round btn-default"><i class="glyphicon glyphicon-remove">
                    </i></a>
                </div>
            </div>
            <div class="box-content">
                <form role="form" target="_blank" action="/Products/Detail" method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1">
                        產品名稱</label>
                    <input type="text" name="ProductName" class="form-control" id="exampleInputEmail1" placeholder="Enter email" value="@Model.ProductName">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">
                        產品單價</label>
                    <input type="text" name="UnitPrice"  class="form-control" id="exampleInputPassword1" placeholder="Password" value="@Model.UnitPrice">
                </div>
                <button type="submit" class="btn btn-default">
                    歐付寶結帳</button>
                <a href="http://devpayment.allpay.com.tw:12005/QuickPay/ShowQuickPay?BeuVsdBwImBkFfvnH%2byJs3VIECyu8aX%2fu2%2b3j1clrGs%3d">
                    <img src="http://devpayment.allpay.com.tw:12005/Content/images/pay_01B.jpg" /></a>
                </form>
            </div>
        </div>
    </div>
    <!--/span-->
</div>
<!--/row-->
