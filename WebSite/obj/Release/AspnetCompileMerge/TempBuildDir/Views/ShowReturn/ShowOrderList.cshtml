<script type="text/javascript">
    var tbl;
    $(function () {
        tbl = $('#letterList').dataTable({
            "sDom": "<'row'<'col-md-6'l><'col-md-6'f>r>t<'row'<'col-md-12'i><'col-md-12 center-block'p>>",
            "bServerSide": true,
            "sAjaxSource": "/ShowReturn/ShowOrderListJSON", //mvc後臺ajax調用介面。
            'bPaginate': true, //是否分頁。
            "bProcessing": false, //當datatable獲取資料時候是否顯示正在處理提示資訊。
            'bFilter': true, //是否使用內置的過濾功能。
            'bLengthChange': true, //是否允許使用者自訂每頁顯示條數。
            'sPaginationType': 'bootstrap', //分頁樣式
            "aoColumns": [
                { "mDataProp": "MerchantID" },
                { "mDataProp": "MerchantTradeNo" },
                { "mDataProp": "RtnCode" },
                { "mDataProp": "RtnMsg" },
                { "mDataProp": "TradeNo" },
                { "mDataProp": "TradeAmt" },
                { "mDataProp": "PaymentDate" },
                { "mDataProp": "PaymentType" },
                { "mDataProp": "PaymentTypeChargeFee" },
                { "mDataProp": "TradeDate" },
                { "mDataProp": "SimulatePaid" },
                { "mDataProp": "CheckMacValue" }
            ]
        });

    });
</script>